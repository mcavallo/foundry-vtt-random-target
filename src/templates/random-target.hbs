{{#if areThereTokens}}
  <form>
    <nav class='tabs' data-group='target-categories'>
      {{#each tokenCategories}}
        <a class='item' data-tab='{{id}}'>{{label}} ({{totalItems}})</a>
      {{/each}}
    </nav>

    <div class='scrollable-content'>
      <section class='content'>
        {{#each tokenCategories}}
          <div class='tab' data-tab='{{id}}' data-group='target-categories'>
            <div class='target-item'>
              <input
                type='checkbox'
                class='toggleSelection'
                value={{id}}
                id='{{concat "toggleSelection." id}}'
                data-dtype='Boolean'
              />
              <label for='{{concat "toggleSelection." id}}'>
                <span>Toggle Selection (All/None)</span>
              </label>
            </div>
            {{#each items}}
              {{#if defeated}}
              <div class='target-item defeated' title="Defeated">
              {{else}}
              <div class='target-item'>
              {{/if}}
                <input
                  type='checkbox'
                  name='selectedTokens'
                  value={{id}}
                  id='{{concat "selectedTokens." id}}'
                  data-dtype='String'
                  {{checked selected}}
                />
                <label for='{{concat "selectedTokens." id}}'>
                  <div class="image">
                    {{#if img.animated}}
                    <video src='{{img.src}}' autoplay muted loop></video>
                    {{else}}
                    <img src='{{img.src}}' />
                    {{/if}}
                  </div>
                  <div class="name">
                    {{name}}
                  </div>
                </label>
              </div>
            {{/each}}
          </div>
        {{/each}}
      </section>
    </div>

    <footer class='flexrow footer'>
      <button type='submit' name='cancel'>Cancel</button>
      <button type='submit' name='submit'>
        Random Target
        <span class='selected-tokens-count'>({{ initialSelectionCount }})</span>
      </button>
    </footer>
  </form>
{{else}}
  <div class='error-message'>There are no tokens to select in the current scene.</div>
{{/if}}
